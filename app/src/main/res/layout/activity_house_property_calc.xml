<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HousePropertyCalcActivity">

    <!-- view for AdMob Banner Ad -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/house_property_calcpage_banner_ad_unit_id" />

    <Spinner
        android:id="@+id/saleYearSpinner"
        android:layout_width="332dp"
        android:layout_height="38dp"
        android:layout_above="@+id/adView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="458dp"
        android:spinnerMode="dialog"
        android:prompt="@string/sale_year_textview"/>

    <TextView
        android:id="@+id/saleYearTextView"
        android:layout_width="76dp"
        android:layout_height="82dp"
        android:layout_above="@+id/saleYearSpinner"
        android:layout_alignStart="@+id/saleYearSpinner"
        android:layout_alignEnd="@+id/saleYearSpinner"
        android:layout_alignRight="@+id/saleYearSpinner"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="254dp"
        android:layout_marginRight="254dp"
        android:layout_marginBottom="-54dp"
        android:text="@string/sale_year_textview"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold"
        ads:fontFamily="@font/enriqueta" />

</RelativeLayout>